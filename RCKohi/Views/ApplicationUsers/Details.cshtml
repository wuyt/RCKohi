@model RCKohi.Models.ApplicationUsersViewModels.UserViewModel

@{
    ViewData["Title"] = "用户管理";
    Layout = "~/Views/Shared/_LayoutSbAdmin2.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">用户信息</div>
            <div class="panel-body">
                <form role="form">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Id)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.Id)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.UserName)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.UserName)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Email)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.Email)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.PhoneNumber)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.PhoneNumber)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Roles)</label>
                        <p class="form-control-static">
                            @foreach (var role in Model.Roles)
                            {
                                <label class="btn btn-default disabled">@role</label>
                            }
                        </p>
                    </div>
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="列表"><i class="far fa-list-alt"></i>&nbsp;&nbsp;返回列表</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
