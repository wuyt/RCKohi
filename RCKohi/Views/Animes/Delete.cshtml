@model RCKohi.Models.Demo.Anime

@{
    ViewData["Title"] = "动画作品";
    Layout = "~/Views/Shared/_LayoutSbAdmin2.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">删除作品</div>
            <div class="panel-body">
                <form role="form" asp-action="Delete">
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Name)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.Name)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.Number)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.Number)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.BroadcastDate)</label>
                        <p class="form-control-static">@Html.DisplayFor(model => model.BroadcastDate)</p>
                    </div>
                    <div class="form-group">
                        <label>@Html.DisplayNameFor(model => model.IndexShow)</label>
                        <p class="form-control-static">@string.Format("{0}", @Html.DisplayTextFor(modelItem => Model.IndexShow).ToString() == "True" ? "是" : "否")</p>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="ID" />
                        <button type="submit" class="btn btn-warning" data-toggle="tooltip" data-placement="bottom" title="删除"><i class="fa fa-times"></i>&nbsp;&nbsp;删除作品</button>
                        <a asp-action="Index" class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="列表"><i class="fa fa-list"></i>&nbsp;&nbsp;返回列表</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>